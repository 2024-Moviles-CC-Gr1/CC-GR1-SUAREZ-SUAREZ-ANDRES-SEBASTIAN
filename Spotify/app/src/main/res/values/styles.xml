<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/spotify_black</item>
        <item name="colorPrimaryDark">@color/spotify_black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/spotify_white</item>
    </style>

    <!-- Text Styles -->
    <style name="SongTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SongArtistText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/spotify_gray</item>
    </style>

    <style name="PlaylistNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
